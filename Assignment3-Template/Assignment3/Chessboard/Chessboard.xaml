            </Border>

            <Border Grid.Column="7" Grid.Row="6" >
                <Viewbox>
                    <Image Source="{StaticResource PawnWhite}"/>
                </Viewbox>
            </Border>

            <Border Grid.Column="0" Grid.Row="7">
                <Viewbox>
                    <Image Source="{StaticResource RookWhite}"/>
                </Viewbox>
            </Border>

            <Border Grid.Column="1" Grid.Row="7" Background="Brown" >
                <Viewbox>
                    <Image Source="{StaticResource KnightWhite}"/>
                </Viewbox>
            </Border>

            <Border Grid.Column="2" Grid.Row="7">
                <Viewbox>
                    <Image Source="{StaticResource BishopWhite}"/>
                </Viewbox>
            </Border>

            <Border Grid.Column="3" Grid.Row="7" Background="Brown" >
                <Viewbox>
                    <Image Source="{StaticResource KingWhite}"/>
                </Viewbox>
            </Border>

            <Border Grid.Column="4" Grid.Row="7">
                <Viewbox>
